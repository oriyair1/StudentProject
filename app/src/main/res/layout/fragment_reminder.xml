<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="com.example.or.student.ReminderFragment">

<ImageView
    android:src="@drawable/bell"
    android:layout_gravity="center_vertical"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickTimeReminder"
        android:text="00:00"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:textSize="25sp"
        android:id="@+id/timeTextReminder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickDateReminder"
        android:text="1/1/2016"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"
        android:id="@+id/DateTextReminder" />



</LinearLayout>
